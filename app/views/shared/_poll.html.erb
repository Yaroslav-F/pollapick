<div class="poll" id="poll-<%= poll.id %>">
  <h2><%= poll.question %></h2>
  <div class="poll-options">
    <%= render "shared/options", poll: poll %>
  </div>
  <p class="tags">Tags: <%= raw poll.tag_list.map { |t| link_to "##{t}", tag_path(tag: t) }.join(', ') %></p>
</div>

<%= render "shared/poll_votes", poll: poll %>