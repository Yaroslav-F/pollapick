<h2>All Polls</h2>
<%= link_to 'New Poll', new_poll_path, :class => "btn btn-primary" %>
<hr>
<% @polls.each do |poll| %>
    <div class="poll">
      <h3><%= poll.question %></h3>
      <table class="center table-striped poll">
        <% poll.options.each do |option| %>
          <tr>
            <td class="col-sm-1">
              <%= link_to 'pick', pick_option_path(id: option.id), method: :put, :class => "btn btn-xs btn-primary" %>
            </td>
            <th class="col-sm-5"><%= option.option_text %> &nbsp</th>
            <td class="col-sm-5">
              <div class="progress">
                <div class="progress-bar" style="width: <%= option.percentage %>%;"></div>
              </div>
            </td>
            <td class="col-sm-1">&nbsp<%= option.percentage %>%</td>
          </tr>
        <% end %>
      </table>
      <br>
      <h4>Total Poll Picks: <%= poll.total_poll_picks %></h4>
      <br>
      <%= link_to 'Remove Poll', poll, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-primary" %>
    </div>
  <hr>
<% end %>
