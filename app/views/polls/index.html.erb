<%= form_tag tag_path, method: :get do %>
  <%= label_tag :tag, "Search by Tag:" %>
  <%= text_field_tag :tag %>
<% end %>
<br>
<br>
<br>
<%= link_to 'Make a New Poll', new_poll_path, :class => "btn" %><br><br><br>
<%= current_user ? (link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn") : (link_to 'Sign In', new_user_session_path, class: "btn") %>
<% @polls.each do |poll| %>
  <div class="poll-container poll-<%= poll.id %>">
    <%= render 'shared/poll', :poll => poll %>
  </div>
<% end %>
