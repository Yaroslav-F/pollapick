<h1>Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form">
	  <div class="field">
	    <h4>Email:</h4>
	    <%= f.email_field :email, :class => "form-field-login", autofocus: true %>
	    <br>
	    <br>
	    <br>
	  </div>
	</div>
	<br>
	<br>
	<br>
	<%= f.submit "Send me reset password instructions", :class => "btn-xs" %>
<% end %>
<%= render "devise/shared/links" %>

